@model LoginModel
@{
    ViewBag.Title = "Login";

}
    <div class="page-notification">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Login" asp-action="Register">Login</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="login-form-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                    <div class="login-form">
                        <form asp-controller="Account" asp-action="Login"  method="post" novalidate="novalidate">
                            <input hidden asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
                            <!-- Login Heading -->
                            <div class="login-heading">
                                <span>Login</span>
                                <p>Enter Login details to get access</p>
                            </div>
                            <!-- Single Input Fields -->
                            <div class="input-box">
                                <div class="single-input-fields">
                                    <label asp-for="Email">Username or Email Address</label>
                                    <input type="text" placeholder="Username / Email address" asp-for="Email">
                                </div>
                                <div class="single-input-fields">
                                    <label asp-for="Password">Password</label>
                                    <input type="password" placeholder="Enter Password" asp-for="Password">
                                </div>
                                <div class="single-input-fields login-check">
                                    <input type="checkbox" id="fruit1" name="keep-log" asp-for="RememberMe">
                                    <label for="fruit1">Keep me logged in</label>
                                    <a href="#" class="f-right">Forgot Password?</a>
                                </div>
                            </div>
                            <!-- form Footer -->
                            <div class="login-footer">
                                <p>Don’t have an account? <a asp-controller="Account" asp-action="Register">Sign Up</a>  here</p>
                                <button class="submit-btn3">Login</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>